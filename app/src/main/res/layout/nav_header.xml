<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:paddingTop="40dp"
    android:paddingBottom="20dp"
    android:background="@null"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat">

    <ImageButton
        android:id="@+id/drawer_close_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:background="@null"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/close_drawer_icon" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/user_favourite_team_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:clickable="true"
        android:padding="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="60dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/player_team_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/favourite_team_icon_content_description" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/player_team_name"
        android:layout_marginTop="16dp"
        android:height="24dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="2sp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:text=""/>



</LinearLayout>