<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/black"
    app:cardBackgroundColor="@color/my_sin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_players_jersey_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/asap_condensed_regular"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="120">
            <TextView
                android:id="@+id/card_players_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="bottom"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/asap_condensed_regular"
                android:paddingBottom="5dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/card_players_height_and_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/card_players_position"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/asap_condensed_regular"
            android:gravity="center">
        </TextView>



    </LinearLayout>



</com.google.android.material.card.MaterialCardView>